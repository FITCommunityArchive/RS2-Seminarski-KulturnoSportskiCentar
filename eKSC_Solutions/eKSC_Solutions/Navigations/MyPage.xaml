<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eKSC_Solutions.Navigation.MyPage"
             xmlns:nav="clr-namespace:eKSC_Solutions.Navigation" 
             xmlns:pages="clr-namespace:eKSC_Solutions"
                  MasterBehavior="Popover">
  <MasterDetailPage.Master>
    <nav:MyPageMaster x:Name="MasterPage" />
  </MasterDetailPage.Master>
  <MasterDetailPage.Detail>
    <NavigationPage>
      <x:Arguments>
        <pages:MainPage />
      </x:Arguments>
    </NavigationPage>
  </MasterDetailPage.Detail>
</MasterDetailPage>